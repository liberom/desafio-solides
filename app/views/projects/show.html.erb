<div class="container">
  <h2>Projeto</h2>
  <p>
  <strong>Nome:</strong>
  <%= @project.name %>
  </p>

  <p>
    <strong>Descrição:</strong>
    <%= @project.description %>
  </p>
  <div class="d-flex justify-content-around">
    <%= link_to projects_path, class: 'text-secondary' do %>
      <!-- Voltar -->
      <i class="fas fa-arrow-circle-left"></i>
    <% end %> |
    <%= link_to edit_project_path(@project), class: 'text-warning' do %>
      <!-- Editar -->
      <i class="far fa-edit"></i>
    <% end %> |
    <%= link_to @project, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'text-danger' do %>
      <!-- Apagar -->
      <i class="far fa-trash-alt"></i>
    <% end %>
  </div>

  <h2>Eventos</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Data</th>
        <th>Duração</th>
        <th>Tipo</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <% if event.log.project_id == params[:id] %>
          <tr>
            <td><%= event.date %></td>
            <td><%= event.duration.strftime('%H:%M:%S') %></td>
            <td><%= event.log.tag.description.slice!(6..-1).upcase %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="text-center">
    <%= link_to 'Novo Registro', new_log_path, class: 'btn btn-primary' %>
  </div>

</div>



