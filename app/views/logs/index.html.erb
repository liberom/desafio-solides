<div class="container">
  <h2>Timesheet</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Data</th>
        <th>Horário</th>
        <th>Descrição</th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @logs.each do |log| %>
        <% if log.user_id == current_user.id %>
          <tr>
            <td><%= log.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= log.created_at.getlocal.strftime('%H:%M:%S') %></td>
            <td>
              <%#= link_to log do %>
                <%= log.tag.description %>
              <%# end %>
            </td>
            <td><%= link_to 'Apagar', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>

      <% end %>
    </tbody>
  </table>

  <!-- <br> -->

  <div class="text-center">
    <%= link_to 'Novo Registro', new_log_path, class: 'btn btn-primary' %>
  </div>
  <div class="text-center">
    <%= link_to 'Página Inicial', root_path, class: 'btn btn-secondary' %>
  </div>

</div>



