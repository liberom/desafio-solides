<div class="container">
  <h2>Eventos</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Data</th>
        <th>Duração</th>
        <th>Projeto</th>
        <th>Tipo</th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
            <td><%= event.date %></td>
            <td><%= event.duration.strftime('%H:%M:%S') %></td>
            <td><%= event.log.project.name %></td>
            <td><%= event.log.tag.description.slice!(6..-1).upcase %></td>

          <!-- <td><%#= link_to 'Exibir', event %></td>
          <td><%#= link_to 'Editar', edit_event_path(event) %></td> -->
          <td><%= link_to 'Apagar', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="text-center">
    <%= link_to 'Novo Registro', new_log_path, class: 'btn btn-primary' %>
    <%#= link_to 'Novo Evento', new_event_path, class: 'btn btn-primary' %>
  </div>

</div>



